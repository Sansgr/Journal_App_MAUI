@inherits LayoutComponentBase
@inject Journal_App_MAUI.Services.UserService UserService
@inject NavigationManager NavigationManager

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <button class="theme-toggle" @onclick="ToggleTheme">Change Theme</button>
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>

            @if (UserService.IsLoggedIn)
            {
                <button class="btn btn-danger ms-3" @onclick="HandleLogout">Logout</button>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private bool isDarkMode = false;

    private void ToggleTheme()
    {
        isDarkMode = !isDarkMode;
        var mode = isDarkMode ? "dark-mode" : "light-mode";
        JS.InvokeVoidAsync("document.body.classList.add", mode);
        JS.InvokeVoidAsync("document.body.classList.remove", isDarkMode ? "light-mode" : "dark-mode");
    }

    private void HandleLogout()
    {
        UserService.Logout();                  // clear login state
        NavigationManager.NavigateTo("/"); // redirect to login page
    }

    [Inject] IJSRuntime JS { get; set; }
}
